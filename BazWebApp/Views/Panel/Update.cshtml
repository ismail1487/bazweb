                                        <label for='KisiEkranAdi' class='validationMessage'></label>
                                    </div>
                                </div>*@
                            <div class="col-md-12 left">
                                <div class="form-group">
                                    <div class="col-12">
                                        <label class="Lbl">@localizator["Telefon No"].Value:</label>
                                    </div>
                                    <div class="col-12 telefonDiv ">
                                        <div class="row">
                                            <div class="col-10 pr-0">
                                                <input type="text" class="form-control Shape" id="KisiTelefon1" placeholder="@localizator["Telefon No"].Value" />
                                            </div>
                                            <div class="col-2 h-100" id="AlanKod">
                                                <button class="btn h-100 btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                                    <a href="#">
                                                        <img id="ddlImg" src="~/lib/flag-icons/24x24/TR.png" />
                                                    </a>
