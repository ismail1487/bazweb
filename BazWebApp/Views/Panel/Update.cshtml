                                @*<hr />*@
                                <div class="row">
                                    <div class="col-md-4"> <label class="LabelView">@localizator["Kayıt Tarihi"].Value</label></div>
                                    <div class="col-md-8">
                                        <p class="proftxt"></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
<div class="modal fade" id="modalCropper" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">Crop</h5>
            </div>
            <div class="modal-body">
                <div class="img-container" id="cropper-example">
                    <img id="imageCrop" src="" width="300">
                </div>
            </div>
            <div class="modal-footer">
                <button id="imageCropSave" type="button" class="btn btn-primary">Kaydet</button>
            </div>
        </div>
    </div>
</div>
<input type="file" hidden="hidden" id="updimage" />
