<!-- Main content -->
<section class="content profile-update-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h3 id="Influencing-Docs">@localizator["Profil"].Value</h3>
                <div class="row">
                    <div class="col-md-7 Back">
                        <div class="row">
                            <div class="col-md-12 left">
                                <a href="javascript:;" id="openImage">
                                    <img id="KisiResimUrl" src="/img/_image.svg" class="profile-user-img img-fluid img-circle -Image1-Circle">
                                </a>

                                <a id="kurRes"><i id="kurResI" class="fas fa-minus-circle"></i></a>
                            </div>
                            <div class="col-md-12 left" id="NameMail">
                                <p class="Name-Surname"></p>
                                <p class="Email"></p>
                            </div>
                            <div class="col-md-12 left">
                                <p class="" id="alertDiv" style="display: none;"></p>
                            </div>
                            <div class="col-md-12 left">
                                <div class="form-group">
                                    <label class="Lbl">@localizator["Ad"].Value</label>
                                    <input type="text" class="form-control Shape" id="KisiAdi" placeholder="Adı">
                                    <label for='KisiAdi' class='validationMessage'></label>
                                </div>
                            </div>
                            <div class="col-md-12 left">
                                <div class="form-group">
                                    <label class="Lbl">@localizator["Soyad"].Value</label>
                                    <input type="text" class="form-control Shape" id="KisiSoyadi" placeholder="Soyadı">
                                    <label for='KisiSoyadi' class='validationMessage'></label>
                                </div>
                            </div>
                            <div class="col-md-12 left">
                                <div class="form-group">
                                    <label class="Lbl">@localizator["E-Posta"].Value</label>
                                    <input type="email" class="form-control Shape" id="KisiEposta" placeholder="E-Posta">
                                    <label for='KisiEposta' class='validationMessage'></label>
                                </div>
                            </div>
                            @*<div class="col-md-12 left">
                                    <div class="form-group row">
