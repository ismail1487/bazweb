                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <label for='KisiTelefon1' class='validationMessage'></label>
                                </div>
                            </div>
                            @* 
                            <div class="col-md-12 left">
                                <div class="form-group">
                                    <label class="Lbl">@localizator["Sistem Dili"].Value</label>
                                    <select id="DilID" class="form-control" style="width: 100%;">
                                    </select>
                                    <label for='DilID' class='validationMessage'></label>
                                </div>
                            </div> *@
                            <div class="col-md-12 left">
                                <div class="form-group">
                                    <label class="Lbl">@localizator["Eski Şifre"].Value</label>
                                    <input type="password" class="form-control Shape" id="ProfilEskiSifre" placeholder="Eski Şifre" autocomplete="new-password">
                                </div>
                            </div>
                            <div class="col-md-12 left">
                                <div class="form-group row">
                                    <label class="Lbl">@localizator["Yeni Şifre"].Value</label>
                                    <input type="password" class="form-control Shape" id="ProfilYeniSifre" placeholder="Yeni Şifre">
                                </div>
                            </div>
                            <div class="col-md-12 left">
                                <div class="form-group row">
                                    <label class="Lbl">@localizator["Yeni Şifre Tekrar"].Value</label>
                                    <input type="password" class="form-control Shape" id="ProfilYeniSifreTekrar" placeholder="Yeni Şifre Tekrar">
                                </div>
                            </div>
                            <div class="col-md-12 left">
                                <div class="form-group row">
                                    <p id="strengthMessage" for="SifreKarmasik" class="SifreKarmasik text-center">
                                        @localizator["Şifreniz en az 1 küçük harf, 1 büyük harf, 1 sayı ve 1 özel karakter içermelidir ve en az 8 karakter uzunluğunda olmalıdır."].Value
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-12 text-center">
                                <button id="btnUpdate" class="Setup"> <p class="ContentP">@localizator["Güncelle"].Value</p></button>
                                <button id="btnDlt" class="Setup"><p class="ContentP">@localizator["Sil"].Value</p></button>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 Card">
                        <div class="row">
