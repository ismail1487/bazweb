	<!-- Main content -->
	<section class="content">
		<div class="row">
			<div class="col-xl-5 col-lg-5 col-md-5 col-sm-12 col-12">
				<div class="col-12">
					<h5 class="left-head">@localizator["Yeni Kullanıcı"].Value</h5>
					<p class="left-body">@localizator["Yeni Kişi Tanımlama"].Value</p>
				</div>
			</div>
			<div class="col-xl-7 col-lg-7 col-md-7 col-sm-12 col-12">
				<div class="card container mt-2">
					<h5>@localizator["Organizasyon Bilgileri"].Value<b>*</b></h5>
					<div class="row row-cols-2 kisiTanimlamaDivBlocks container">
						<div class="col-4" id="Krm">
							<div class="form-group">
								<label class="Lbl">@localizator["Kurum Seçimi"].Value<b>*</b></label>
								<select id="Kurum" class="form-control" style="width: 100%;" onchange="BirimDDLDoldur($(this).val())" @* required="true" *@>
								</select>
								<label for="Kurum" class="validationMessage"></label>
							</div>
						</div>

						<div class="col-4">
							<div class="form-group">
								<label class="Lbl">Departman<b>*</b></label>
								<select id="Departman" class="form-control" style="width: 100%;" @* required="true" *@>
									<option value="0">Seçiniz</option>
								</select>
								<label for="Departman" class="validationMessage"></label>
							</div>
						</div>
						<div class="col-4" id="Pzsyn">
							<div class="form-group">
								<label class="Lbl">@localizator["Pozisyon"].Value<b>*</b></label>
								<select id="Pozisyon" class="form-control" style="width: 100%;" @* required="true" *@>
									<option value="0">@localizator["Seçiniz"].Value</option>
								</select>
								<label for="Pozisyon" class="validationMessage"></label>
							</div>
						</div>
						@*<div class="col" id="Rl" style="display:none">*@
						<div class="col-4" id="R">
							<div class="form-group">
								<label class="Lbl">@localizator["Rol"].Value<b>*</b></label>
								<select id="Rol" class="form-control" style="width: 100%;" @* required="true" *@>
									<option value="0">@localizator["Seçiniz"].Value</option>
								</select>
								<label for="Rol" class="validationMessage"></label>
							</div>
						</div>
						@*<div class="col-md-2">
                                <div class="form-group">
                                    <label>Lokasyon</label>
                                    <select id="Lokasyon" class="form-control" style="width: 100%;">
