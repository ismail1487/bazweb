@{
}
@inject Microsoft.Extensions.Localization.IStringLocalizer<Labels> localizator
@*<link href="https://kendo.cdn.telerik.com/2020.3.1118/styles/kendo.common.min.css" rel="stylesheet" />*@
<link href="~/lib/kendo/Content/kendo/2020.3.1118/kendo.common.min.css" rel="stylesheet" />
<link href="~/css/All/Module.css" rel="stylesheet" />
<script src="~/js/Model/LicenseModuleModel/ModulDetayKayitModel.js"></script>
<script src="~/js/Services/LicenseModuleServices/ModuleService.js"></script>

<div class="container-fluid service-body">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-md-6">
                    <h1>@localizator["Modül Tanımlama"].Value</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content model-bind">
        <div class="container-fluid">
            <div class="row text-center">
                <div class="col-12 text-center">
                    <div class="card model-bind">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 offset-3">
                                    <div class="row ">
                                        <div class="form-group col-md-6 offset-3">
                                            <label class="Lbl">@localizator["Modül İsmi"].Value<b style="color: red;">*</b></label>
                                            <div class="input-group input-group-select mb-3">

                                                <input name="ModuleName" type="text" class="form-control form-control-sm preventspace" data-bind="value: data.Name" />
                                            </div>
                                            <label for="Name" class="validationMessage"></label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-md-6 offset-3">
                                            <label class="Lbl">@localizator["Sayfalar"].Value<b style="color: red;">*</b> </label>
                                            <select style="height: 38px; line-height: 38px; width: 100%" id="Sayfalar" data-placeholder="@localizator["Sayfa Seçiniz"].Value" data-bind="value:data.SayfaId" class="form-control select2-primary" multiple="multiple">
                                            </select>
                                            <label for="SayfaId" class="validationMessage"></label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 text-center">
                                <a href="/Module/List" class="btn   cancel-button-float ">@localizator["Vazgeç"].Value</a>
                                <button type="button" class="btn confirm add-buttons-nofloat" data-bind="click:Kaydet">@localizator["Kaydet"].Value </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<!-- /.content -->
<script>
    $(document).ready(function () {
        moduleService.SaveInitialize();
    });
</script>